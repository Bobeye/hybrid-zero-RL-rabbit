<mujoco model="rabbit">
  <compiler angle="degree" coordinate="global" inertiafromgeom="true"/>
  <default>
    <joint armature="0.01" damping=".1" limited="true"/>
    <geom conaffinity="0" condim="3" contype="1" density="1000" friction="1 1 1" rgba="0.8 0.6 .4 1"/>
  </default>
  <option integrator="RK4" timestep="0.002"/>
  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom friction="2" conaffinity="1" condim="3" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane" material="MatPlane"/>
    <body name="torso" pos="0 0 1.115">
      <camera name='track' mode='track' pos="0 -3 1" zaxis="0 -1 0.5"/>
      <inertial pos="0 0 1.115" quat="0.707107 0 0 0.707107" mass="12" diaginertia="1.33 1.33 0.1" />
      <!-- The three following joints are located in the hip of the robot and allow him to move in the sagital plane -->
      <joint armature="0" axis="1 0 0" damping="0" limited="false" name="rootx" pos="0 0 0" stiffness="0" type="slide"/>
      <joint armature="0" axis="0 0 1" damping="0" limited="false" name="rootz" pos="0 0 0" ref="0.8" stiffness="0" type="slide"/>
      <joint armature="0" axis="0 1 0" damping="0" limited="false" name="rooty" pos="0 0 1.25" stiffness="0" type="hinge"/>
      <geom friction="0.9" fromto="0 0 1.43 0 0 0.8" name="torso_geom" size="0.04" type="capsule"/>
      <body name="thigh" pos="0 0 0.6">
      	<inertial pos="0 0 0.6" mass="6.8" diaginertia="0.47 0.47 0.05" />
        <joint axis="0 1 0" name="thigh_joint" pos="0 0 0.8" ref="-180" range="90 250" type="hinge"/>
        <geom friction="0.9" fromto="0 0 0.8 0 0 0.4" name="thigh_geom" size="0.03" type="capsule"/>
        <body name="leg" pos="0 0 0.2">
          <inertial pos="0 0 0.24" mass="3.2" diaginertia="0.2 0.2 0.02" />
          <joint axis="0 1 0" name="leg_joint" pos="0 0 0.4" range="0 150" type="hinge"/>
          <geom friction="2" fromto="0 0 0.4 0 0 0.02" name="leg_geom" size="0.04" type="capsule"/>
          <site name='t1' pos='0 0 .04' type='box' group='4' size='.04 .04 .06'/>      
        </body>
      </body>
      <!-- copied and then replace thigh->thigh_left, leg->leg_left, foot->foot_right -->
      <body name="ca_left" pos="0 0 0.6">
      	<inertial pos="0 0 0.6" mass="6.8" diaginertia="0.47 0.47 0.05" />
        <joint axis="0 1 0" name="thigh_left_joint" pos="0 0 0.8" ref="-180" range="90 250" type="hinge"/>
        <geom friction="0.9" fromto="0 0 0.8 0 0 0.4" name="thigh_left_geom" rgba=".7 .3 .6 1" size="0.03" type="capsule"/>
        <body name="leg_left" pos="0 0 0.2">
          <inertial pos="0 0 0.24" mass="3.2" diaginertia="0.2 0.2 0.02" />
          <joint axis="0 1 0" name="leg_left_joint" pos="0 0 0.4" range="0 150" type="hinge"/>
          <geom friction="2" fromto="0 0 0.4 0 0 0.02" name="leg_left_geom" rgba=".7 .3 .6 1" size="0.04" type="capsule"/>
          <site name='t2' pos='0 0 .04' type='box' group='4' size='.04 .04 .06'/>
        </body>
      </body>
    </body>
  </worldbody>
  <actuator>
    <!-- <motor joint="torso_joint" ctrlrange="-100.0 100.0" isctrllimited="true"/>-->
    <motor ctrllimited="true" ctrlrange="-4.0 4.0" gear="10" joint="thigh_joint"/>
    <motor ctrllimited="true" ctrlrange="-4.0 4.0" gear="10" joint="leg_joint"/>
    <motor ctrllimited="true" ctrlrange="-4.0 4.0" gear="10" joint="thigh_left_joint"/>
    <motor ctrllimited="true" ctrlrange="-4.0 4.0" gear="10" joint="leg_left_joint"/>
    <!-- <motor ctrllimited="true" ctrlrange="-4.0 4.0" gear="5" joint="leg_left_joint/>-->
  </actuator>
    <asset>
        <texture type="skybox" builtin="gradient" rgb1=".4 .5 .6" rgb2="0 0 0"
            width="100" height="100"/>
        <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
        <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
        <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texplane"/>
        <material name="geom" texture="texgeom" texuniform="true"/>
    </asset>

  <sensor>
    <touch name="s_t1"  site="t1"/>
    <touch name="s_t2"  site="t2"/>
  </sensor>    

</mujoco>
